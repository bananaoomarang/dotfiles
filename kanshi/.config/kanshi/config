profile {
	output eDP-1 enable scale 1 position 0,0
	exec sh -c "xrdb -load ~/.Xresources.small; swaymsg xwayland scale 1; echo Gdk/WindowScalingFactor 1 > ~/.config/xsettingsd/xsettingsd.conf; killall -HUP xsettingsd"
}

profile {
	output eDP-1 disable
	output DP-1 scale 1.5
	exec sh -c "xrdb -load ~/.Xresources; swaymsg xwayland scale 2; echo Gdk/WindowScalingFactor 2 > ~/.config/xsettingsd/xsettingsd.conf; killall -HUP xsettingsd"
}
